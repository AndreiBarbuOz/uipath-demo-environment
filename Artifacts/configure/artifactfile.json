{
  "$schema": "https://raw.githubusercontent.com/Azure/azure-devtestlab/master/schemas/2016-11-28/dtlArtifacts.json",
  "title": "Configure VM",
  "publisher": "Andrei Barbu",
  "description": "Runs the configuration script",
  "tags": [
    "Windows",
    "UiPath"
  ],
  "parameters": {
    "username": {
      "type": "string",
      "defaultValue": "",
      "displayName": "Windows username",
      "description": "Username (required because the artifact runs in a system context)"
    },
    "password": {
      "type": "string",
      "defaultValue": "",
      "displayName": "Windows password",
      "description": "password"
    },
    "ms_account_user": {
      "type": "string",
      "defaultValue": "",
      "displayName": "Microsoft account (e-mail)",
      "description": "The Microsoft account email from cdx.transform.microsoft.com - DO NOT use your UiPath account or IT gets a heart attack"
    },
    "ms_account_pw": {
      "type": "string",
      "defaultValue": "",
      "displayName": "Microsoft account password",
      "description": "The Microsoft account password from cdx.transform.microsoft.com"
    },
    "autoarm_processes": {
      "type": "array",
      "defaultValue": [],
      "allowEmpty": true,
      "displayName": "Auto-arm demos",
      "description": "Demo processes for which you want to automatically run the arming procedure"
    }
  },
  "targetOsType": "Windows",
  "runCommand": { 
    "commandToExecute": "[concat('python ./config.py --password \"', parameters('password'), '\"', ' --username \"', parameters('username'), '\"', ' --ms_account_user \"', parameters('ms_account_user'), '\"', ' --ms_account_pw \"', parameters('ms_account_pw'), '\"', ' --autoarm \"', string(parameters('autoarm_processes')), '\"') ]"
  }
}